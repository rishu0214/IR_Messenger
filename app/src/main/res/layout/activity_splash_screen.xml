<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <!-- Centered Logo and Title -->

    <!-- Texts at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splogoimg"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:src="@drawable/logo_no_back" />

        <TextView
            android:id="@+id/sptxtIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad_regular"
            android:text="I.R MESSENGER"
            android:textColor="@color/black"
            android:textSize="29dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/sptxtF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/afacad_regular" />

        <TextView
            android:id="@+id/sptxtFD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rsh_diaries"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/afacad_regular" />
    </LinearLayout>

</LinearLayout>
